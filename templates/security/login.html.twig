{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<style>
.loginform{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 50px;
    margin-bottom: 56px;
    margin-top: 79px;
}
input{
  width: 300px;
  height: 40px;
  border: solid 2px white;
  border-bottom: solid 1px #1B3168;
}
label{
  font-size: 24px;
  color: #1B3168;
}
.input{
  width: 300px;
  height: 40px;
  border: solid 2px white;
  border-bottom: solid 1px #1B3168;
}
.btn{
  cursor: pointer;
  color: #1B3168;
  border: solid 2px #1B3168;
  padding: 10px 30px;
  border-radius: 5px;
  background-color: white;
  font-size: 17px;
}
.btn:hover{
  background-color: #1B3168;
  color: white;
  border:  solid 2px #1B3168;;
}
</style>
{# <div class="page" style=" height: 711px; display:flex ; justify-content: center ; align-items: center"> #}
    <form class="loginform" method="post">
        <h3 style=" color: #1B3168; font-size: 3em ;">Connexion</h3>
        <div class="inputs" style="display:grid ; gap:40px ;">
            <div class="inputForm">
                <label for="inputEmail">email :</label>
                <input class="input" placeholder="Renseigner votre adresse mail" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus >
            </div>
            <div class="inputForm">
                <label for="inputPassword">mot de passe :</label>
                <input class="input" placeholder="Renseigner votre mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
        </div>

            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="rememberMe">
                <input style="width: 20px; height: 20px;" type="checkbox" name="_remember_me">
                <label>Remember me</label>
            </div>

        <div class="buttons" style=" display: flex; gap: 20px" >
            <a href="\" class="btn">
                Retour
            </a>

            <button class="btn" type="submit">
                Connexion
            </button>
        </div>

        {% if error %}
            <div class="errorMessage" style="position: absolute; top: 565px ; color: red ">email ou mot de passe invalide</div>
        {% endif %}


    </form>
</div>
{% endblock %}
