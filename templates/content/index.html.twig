{% extends 'baseBackoffice.html.twig' %}

{% block title %}Hello ContentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="backoffice d-flex direction-column">

        <h1>Liste des Contenus Modifiables</h1>
        
        <div class="array container">
            <div class="header-array">
                <div class="d-flex">
                    <div class="col">
                        <h3>ID</h3>
                    </div>
                    <div class="col">
                        <h3>Page</h3>
                    </div>
                    <div class="col">
                        <h3>Section</h3>
                    </div>
                    <div class="col">
                        <h3>Titre</h3>
                    </div><div class="col">
                        <h3>Contenus</h3>
                    </div>
                </div>
            </div>
            <div class="body-array">
                {% for content in contents %}
                <div class="d-flex">
                    <div class="col">
                        <p>{{ content.id }}</p>
                    </div>
                    <div class="col">
                        <p>{{ content.page }}</p>
                    </div>
                    <div class="col">
                        <p>{{ content.section }}</p>
                    </div>
                    <div class="col">
                    <p>{{ content.title }}</p>
                    </div>
                    <div class="col">
                        <p>{{ content.content }}</p>
                    </div>
                    <div class="col d-flex justify-start">
                        <a class="btn" href="{{ path('app_content_show', {'id': content.id}) }}">Détails</a>
                        <a class="btn" href="{{ path('app_content_edit', {'id': content.id}) }}">Modifier</a>
                    </div>
                </div>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun Contenue n'a été trouvé. Créer en un.</td>
                    </tr>
                {% endfor %}
            </div>
        </div>

        <a class="btn" href="{{ path('app_user_new') }}">Créer un Contenus</a>
    </div>
{% endblock %}