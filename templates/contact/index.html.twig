{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container" style="margin-top: 25px; gap:30px">
    <h2>Remplisser le formulaire ci-dessous pour nous contacter</h2>

    <form action="" method="post" style="padding: 30px 70px; gap: 20px">
        <div class="inputForm">
            <label for="firstname">Votre pr√©nom :</label>
            <input type="text" name="firstname" id="firstname">
        </div>
        <div class="inputForm">
            <label for="lastname">Votre nom :</label>
            <input type="text" name="lastname" id="lastname">
        </div>
        <div class="inputForm">
            <label for="email">Votre email :</label>
            <input type="email" name="email" id="email">
        </div>
        <div class="inputForm">
            <label for="message">Votre message :</label>
            <input style="border-color: black ; height: 100px"type="textarea" name="message" id="message">
        </div>

        <div class="buttons">
            <button class="btn" type="reset">Annuler</button>
            <button class="btn" type="submit">Envoyer</button>
        </div>
        
    </form>
</div>

{% endblock %}
