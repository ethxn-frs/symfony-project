{% extends 'baseBackoffice.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Sondges</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ survey.id }}</td>
            </tr>   
            <tr>
                <th>Question</th>
                <td>{{ survey.question }}</td>
            </tr>
            <tr>
                <th>Réponses</th>
                {% for item in survey.answers %}
                <td> {{item.text}} </td>
                {% else %}
                <td colspan="5">Aucune Réponse n'a été trouvée.</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ survey.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_survey_index') }}">back to list</a>

    <a href="{{ path('app_survey_edit', {'id': survey.id}) }}">edit</a>

    {{ include('survey/_delete_form.html.twig') }}
{% endblock %}